<p>
  <%= form_tag(login_path, {:class => "login"}) do %>
    <table>
      <tr>
        <td><%= text_field_tag(:username, "Username", {:onfocus => "select_all_text(this)"}) %></td>
      </tr>
      <tr>
        <td><%= password_field_tag(:password, "Password", {:onfocus => "select_all_text(this)"}) %></td>
      </tr>
      <tr>
        <td><%= submit_tag("Login") %></td>
      </tr>
    </table>
  <% end %>
</p>
<script>
give_focus('username');
</script>
